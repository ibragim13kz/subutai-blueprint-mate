{
    "name": "${environmentName}",
    "description": "Mate Desktop",
    "version": "1.0.1",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth",
    "containers": [
        {
            "hostname": "mate",
            "template": "debian-stretch@79d92b8cd7af2adb42a54eb49ca83466bb5137de:0.4.1",
            "peer-criteria": "MATE-GROUP",
            "size": "${containerSize}"
        }
    ],
    "peer-criteria": [
        {
            "name": "MATE-GROUP",
            "max-price": "25"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/lbthomsen/subutai-blueprint-mate/archive/master.zip",
        "ansible-playbook": "all.json",
        "groups": [
            {
                "name": "mate",
                "hostnames": [
                    "mate"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "wp",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "MEDIUM",
            "validation": "MEDIUM,LARGE,HUGE"
        }
    }
}
